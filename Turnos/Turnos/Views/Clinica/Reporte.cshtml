@model Turnos.Models.ReporteVM
@{
    ViewBag.Title = "Reporte";
}



<div class="row">
    <div class="col-sm-12">
        <div>
            <h1>
                Reportes
            </h1>
        </div>
    </div>
</div>

<h3>Monto total </h3>

<div class="row">
    <div class="col-lg-6">

        <p>
            Total:  @foreach (var item in Model.montoA)  {  @item.monto }
            </p>
        <h3 class="text-center">
            Cantidad de turnos del 2020 
        </h3>

            <table class="table table-bordered table-striped">

                <thead>
                    <tr>
                        <th class="text-center">
                            Prestacion
                        </th>
                        <th class="text-center">
                            Cantidad
                        </th>

                    </tr>

                </thead>
                <tbody>
                    @foreach (var Item in Model.canT)
                    {
                        <tr class="text-center">
                            <td>
                                @Item.desc

                            </td>
                            <td>
                                @Item.cantidad

                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
</div>


