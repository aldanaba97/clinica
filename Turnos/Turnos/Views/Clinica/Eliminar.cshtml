@model Turnos.Models.turno
@{
    ViewBag.Title = "Eliminar el siguiente turno";
    //List<SelectListItem> ItemsCombo = (List<SelectListItem>)ViewBag.items;
}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h1>Eliminar los datos de @ViewBag.nombre </h1>
        </div>
    </div>
</div>
@using (Html.BeginForm())

{
    @Html.HiddenFor(Model => Model.id)
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "form control", @id = "txtNombre", @readonly= "readonly" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Edad: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.edad, htmlAttributes: new { @class = "form control", @id = "txtEdad", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Fecha: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.fecha, htmlAttributes: new { @class = "form control", @id = "txtEdad", @readonly = "readonly" })
                    </div>
                </div>
                @*<div class="form-group">
                    <label class="col-sm-6 control-label"> Prestacion</label>
                    <div class="col-sm-6">
                        @Html.DropDownList("presta" ,ItemsCombo, "Seleccione prestacion", htmlAttributes: new { @class = "form-control", @id = "txtPrestacion" })

                    </div>
                </div>*@
                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-danger" type="submit">
                            Eliminar datos
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
